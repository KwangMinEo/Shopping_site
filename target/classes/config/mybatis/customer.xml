	<select id="selectAll" parameterType="shopping.crud.customerDTO" resultType="shopping.crud.customerDTO">
	   select h.* from  (select * from QnA  where #{skey} like '%' ||  #{sval} ||  '%'  order by QnA_num 
	   ) h where QnA_num between #{start} and  #{end} 
	</select>
	
