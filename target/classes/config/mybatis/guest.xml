<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guest">	

	<insert id="add"  parameterType="net.shopping.order.GuestDTO">   
	  insert into guest
	  values(#{sabun}, #{name}, #{title}, sysdate ,#{pay}, 0, #{email} )
	</insert>
	
	<select id="selectAll"  resultType="net.shopping.order.GuestDTO">
	  select * from guest order by sabun  
	</select>
	
	<select id="countAll"  resultType="int">
		select count(*) from guest 
	</select>
	
	<select id="detail" parameterType="int"  resultType="net.shopping.order.GuestDTO"> 
		select * from guest where sabun = #{data} 
	</select>
	
	<delete id="delete" parameterType="int">
		delete from guest where sabun = #{data}
	</delete>
	
	<update id="update" parameterType="net.shopping.order.GuestDTO">
		update guest set  name = #{name}, title=#{title}, pay=#{pay}, email=#{email} where sabun = #{sabun}
	</update>
	
</mapper>
















