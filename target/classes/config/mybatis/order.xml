<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="order">	
	
	<insert id="add" parameterType="shopping.crud.order.orderDTO">
	  insert into values(order_detail_seq.nextval,#{user_id},#{product_id}
	  ,#{product_name},#{option1},#{option2},#{price},#{count},
	  #{user_name},#{user_address1},#{user_address2},#{user_puone},
	  #{orderdate},#{status},#{file1}
	  )
	  
	</insert>
	<select id="selectproduct" parameterType="shopping.crud.order.orderDTO" resultType="shopping.crud.order.orderDTO">
	  select * from product
	 
	</select>
	
	<select id="selectusers" parameterType="shopping.crud.order.orderDTO" resultType="shopping.crud.order.orderDTO">
	  select * from users
	 
	</select>
	
	
	
	<delete id="del" parameterType="int" >
	delete from product where product_id=#{product_id}
	</delete>
	 
</mapper>
	

















