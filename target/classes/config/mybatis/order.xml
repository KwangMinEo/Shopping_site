<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="order">	
    <insert id="add">
     insert into order_detail 
     values(
     order_num_seq.nextval,#{user_id},#{product_id},#{product_name},#{product_img},#{option1}
     ,#{option2},#{price},#{1},#{user_name},#{user_address1},#{user_address2},
     #{user_phone},#{status}
     )
    
    </insert>
	
	<select id="selectproduct" parameterType="shopping.crud.order.orderDTO" resultType="shopping.crud.order.orderDTO">
	  select * from product 
	 
	</select>
	
	<select id="selectusers" parameterType="shopping.crud.order.orderDTO" resultType="shopping.crud.order.orderDTO">
	  select * from users where user_id  = #{user_id}
	 
	</select>
	
	<select id="selectorder" parameterType="shopping.crud.order.orderDTO" resultType="shopping.crud.order.orderDTO">
	  select * from order_detail where user_id =#{user_id}
	</select>
	
	<update id="orderComplete">
	
	
	
	</update>

	 
</mapper>
	